<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedContactos.View.MensajeNuevo"
             Title="{Binding Titulo}">
  <StackLayout Padding="35">
    <Label Text="{Binding AsuntoLabel}"></Label>
    <Entry Text="{Binding Mensaje.Asunto}"></Entry>
    <Label Text="{Binding ContenidoLabel}"></Label>
    <Entry Text="{Binding Mensaje.Contenido}"></Entry>
    <Button Text="{Binding EnviarLabel}" Command="{Binding CmdEnviar}"></Button>
  </StackLayout>
</ContentPage>