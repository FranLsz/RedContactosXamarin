<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedContactos.View.UsuarioDetalle" Title="{Binding Titulo}">
  <StackLayout Padding="10">
    <Label Text="{Binding Usuario.Username}" FontSize="50"></Label>
    <Label Text="{Binding Usuario.NombreCompleto}" FontSize="40"></Label>
    <Button Text="{Binding EnviarMensajeLabel}" Command="{Binding CmdEnviarMensaje}"></Button>
    <Button Text="{Binding BorrarContactoLabel}" Command="{Binding CmdBorrarContacto}"></Button>
  </StackLayout>
</ContentPage>