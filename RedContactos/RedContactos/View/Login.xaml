<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedContactos.View.Login"
             Title ="{Binding Titulo}">
  <StackLayout Padding="35">

    <Entry Text="{Binding Usuario.Username}" Placeholder="{Binding TituloUsername}"></Entry>
    <Entry Text="{Binding Usuario.Password}" Placeholder="{Binding TituloPassword}"></Entry>

    <StackLayout Orientation="Vertical">
      <Button Text="{Binding IniciarLabel}" Command="{Binding cmdLogin}"></Button>
      <Button Text="{Binding RegistroLabel}" Command="{Binding cmdRegistro}"></Button>
    </StackLayout>

  </StackLayout>
</ContentPage>